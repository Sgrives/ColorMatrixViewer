<Window x:Class="ColorMatrixViewer.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="MainWindow" Height="350" Width="525"
		xmlns:local="clr-namespace:ColorMatrixViewer">
	<Grid>
		<WindowsFormsHost>
			<WindowsFormsHost.ContextMenu>
				<ContextMenu x:Name="imageDiffContextMenu">
					<MenuItem Header="Load an image..." Click="MenuItem_Click"/>
				</ContextMenu>
			</WindowsFormsHost.ContextMenu>
			<local:ImageDiff x:Name="imageDiff" MouseDown="imageDiff_MouseDown" />
		</WindowsFormsHost>
	</Grid>
</Window>
