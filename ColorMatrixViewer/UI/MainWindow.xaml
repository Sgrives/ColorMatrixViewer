<Window x:Class="ColorMatrixViewer.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		Title="ColorMatrix Viewer" Height="350" Width="525"
		xmlns:local="clr-namespace:ColorMatrixViewer">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition x:Name="leftColumn" MinWidth="10" Width="258"/>
			<ColumnDefinition MinWidth="10"/>
		</Grid.ColumnDefinitions>

		<ListView Margin="0,0,5,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Top" ScrollViewer.CanContentScroll="False">
			<local:MatrixBox/>
		</ListView>

		<GridSplitter Background="{DynamicResource {x:Static SystemColors.ControlDarkDarkBrushKey}}" Width="5" MouseDoubleClick="GridSplitter_MouseDoubleClick" ResizeDirection="Columns"/>

		<WindowsFormsHost Grid.Column="1">
			<WindowsFormsHost.ContextMenu>
				<ContextMenu x:Name="imageDiffContextMenu">
					<MenuItem Header="Load an image..." Click="MenuItem_Click"/>
				</ContextMenu>
			</WindowsFormsHost.ContextMenu>
			<local:ImageDiff x:Name="imageDiff" MouseDown="imageDiff_MouseDown"/>
		</WindowsFormsHost>
	</Grid>
</Window>
